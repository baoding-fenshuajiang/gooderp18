<?xml version="1.0"?>
<odoo>
    <data>
        <!--客户对账单tree-->
		<record id="customer_statements_report_simple_tree" model="ir.ui.view">
            <field name="name">customer.statements.report.simple.tree</field>
            <field name="model">customer.statements.report</field>
            <field name="arch" type="xml">
                <list string="客户对账单" create="false">
                	<field name="date" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="note" optional="show"/>
                    <field name="amount" optional="show"/>
                    <field name="pay_amount" optional="show"/>
                    <field name="discount_money" optional="show"/>
                    <field name="balance_amount" optional="show"/>
                </list>
            </field>
        </record>
	</data>
</odoo>
	