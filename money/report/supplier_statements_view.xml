<?xml version="1.0"?>
<odoo>
    <data>
        <!--供应商对账单list-->
		<record id="supplier_statements_report_simple_list" model="ir.ui.view">
            <field name="name">supplier.statements.report.simple.list</field>
            <field name="model">supplier.statements.report</field>
            <field name="arch" type="xml">
                <list string="供应商对账单" create="false">
                	<field name="date" optional="show"/>
                    <field name="name" optional="show"/>
                    <field name="note" optional="show"/>
                    <field name="amount" optional="show"/>
                    <field name="pay_amount" optional="show"/>
                    <field name="discount_money" optional="show"/>
                    <field name="balance_amount" optional="show"/>
                </list>
            </field>
        </record>
	</data>
</odoo>
	